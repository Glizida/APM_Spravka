<Window x:Class="APM_Spravka.Record"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APM_Spravka"
        mc:Ignorable="d"
        Title="Record" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <TabControl>
            <TabItem x:Name="Razdel2">
                <TabItem.Header>
                    <TextBlock>Раздел 2</TextBlock>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Orientation="Vertical">
                        <StackPanel>
                            <StackPanel VerticalAlignment="Top" Orientation="Horizontal" Margin="10,10,10,10">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <TextBlock>УНП</TextBlock>
                                    <TextBox Margin="10,0,0,0" Width="75" MaxLength="9" Height="18"></TextBox>
                                    <TextBlock Margin="25,0,0,0">Статус</TextBlock>
                                    <TextBox Margin="10,0,10,0" Width="75" MaxLength="9" Height="18"></TextBox>
                                    <Button Width="20" Content="..."></Button>
                                    </StackPanel>
                                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                    <TextBlock Margin="100,0,0,0">Код места работы:</TextBlock>
                                    <RadioButton Margin="10,0,0,0" GroupName="KeyWork" Content="Основное"></RadioButton>
                                    <RadioButton Margin="10,0,0,0" GroupName="KeyWork" Content="Неосновное"></RadioButton>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="10,0,10,0">Фамилия</TextBlock>
                            <TextBox Margin="10,0,10,0" Width="150"></TextBox>
                            <TextBlock Margin="10,0,10,0">Имя</TextBlock>
                            <TextBox Margin="10,0,10,0" Width="150"></TextBox>
                            <TextBlock Margin="10,0,10,0">Отчество</TextBlock>
                            <TextBox Margin="10,0,10,0" Width="150"></TextBox>
                        </StackPanel>
                        <Separator Margin="0,10,0,10"></Separator>
                        <TextBlock Margin="0,0,0,10">Документ</TextBlock>
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Margin="10,0,10,0">Код</TextBlock>
                            <TextBox Width="50"></TextBox>
                            <Button Margin="10,0,30,0" Width="20" Content="..."></Button>
                            <TextBlock Margin="10,0,10,0">Серия</TextBlock>
                            <TextBox Width="50"></TextBox>
                            <TextBlock Margin="30,0,10,0">Номер</TextBlock>
                            <TextBox Width="50"></TextBox>
                            <TextBlock Margin="30,0,10,0">Дата выдачи</TextBlock>
                            <DatePicker/>
                        </StackPanel>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>
            <TabItem></TabItem>
            <TabItem></TabItem>
            <TabItem></TabItem>
            <TabItem></TabItem>
            <TabItem></TabItem>
            <TabItem></TabItem>
            <TabItem></TabItem>
        </TabControl>
    </Grid>
</Window>
