<Window x:Class="APM_Spravka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APM_Spravka"
        mc:Ignorable="d" Height="450" Width="800" Title="АРМ Справка" MinWidth="800" MinHeight="450">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Настройка" Click="MenuItem_Click_2" ></MenuItem>
                <Separator />
                <MenuItem Header="Сохранить всё"></MenuItem>
                <Separator />
                <MenuItem Header="Печать справки" ></MenuItem>
                <Separator />
                <MenuItem Header="Файл для МНС" ></MenuItem>
                <Separator />
                <MenuItem Header="Выход" Click="MenuItem_Click_1" ></MenuItem>
            </MenuItem>
            <MenuItem Header="Редактирование" >
                <MenuItem Header="Новая запись" Click="MenuItem_Click_4"></MenuItem>
                <MenuItem Header="Корректировка"></MenuItem>
                <MenuItem Header="Удаление"></MenuItem>
            </MenuItem>
            <MenuItem Header="Справочники" >
                <MenuItem Header="Документы, удостоверяющие личность"></MenuItem>
                <MenuItem Header="Класификаторы СОАТО"></MenuItem>
                <MenuItem Header="Налоговые инспекции"></MenuItem>
                <MenuItem Header="Статусы плательщика"></MenuItem>
                <MenuItem Header="Страны мира"></MenuItem>
                <MenuItem Header="Типы улиц"></MenuItem>
                <Separator />
                <MenuItem Header="Авторские вознагрождения"></MenuItem>
                <MenuItem Header="Доходы по операциям с ценными бумагами"></MenuItem>
                <MenuItem Header="Доходы, не облагаемые в устан. пределах"></MenuItem>
                <MenuItem Header="Доходы от резидентов(не резидентов) ПВТ"></MenuItem>
                <MenuItem Header="Стандартные вычеты"></MenuItem>
                <MenuItem Header="Социальные вычеты"></MenuItem>
                <MenuItem Header="Имущественные вычеты"></MenuItem>
                <MenuItem Header="Доходы, полученные гражданами ЕАЭС"></MenuItem>
                <MenuItem Header="Доходы, полученные в Могилевской области"></MenuItem>
            </MenuItem>
            <MenuItem Header="Помощь" Click="MenuItem_Click_3"></MenuItem>
        </Menu>
        <Menu Height="25" VerticalAlignment ="Top" Margin="0,20,0,0">
            <MenuItem Width="24">
                <MenuItem.Icon>
                    <Image Source="Images/Settings.png"></Image>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem IsEnabled ="false" Width="20"></MenuItem>
            <MenuItem Width="24">
                <MenuItem.Icon>
                    <Image Source="Images/File.png"></Image>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Width="24">
                <MenuItem.Icon>
                    <Image Source="Images/Pen.png"></Image>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Width="24">
                <MenuItem.Icon>
                    <Image Source="Images/Delete.png"></Image>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem IsEnabled ="false" Width="20"></MenuItem>
            <MenuItem Width="24">
                <MenuItem.Icon>
                    <Image Source="Images/Save.png"></Image>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Width="24">
                <MenuItem.Icon>
                    <Image Source="Images/Print.png"></Image>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem IsEnabled ="false" Width="20"></MenuItem>
            <MenuItem Width="24">
                <MenuItem.Icon>
                    <Image Source="Images/Mail.png"></Image>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem IsEnabled ="false" Width="20"></MenuItem>
            <MenuItem Width="24">
                <MenuItem.Icon>
                    <Image Source="Images/Help.png"></Image>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem IsEnabled ="false" Width="20"></MenuItem>
            <MenuItem Width="24" Click="MenuItem_Click">
                <MenuItem.Icon>
                    <Image Source="Images/Exit.png"></Image>
                </MenuItem.Icon>
            </MenuItem>
        </Menu>
        <Grid Margin="0,50,0,25">
            <Grid.ColumnDefinitions>
               
            </Grid.ColumnDefinitions>
        </Grid>
        <StackPanel  Orientation="Horizontal" VerticalAlignment="Bottom" Height="25">
            <TextBlock TextAlignment="Center" FontSize="20" Margin="0,0,100,0">Итого</TextBlock>
            <TextBlock TextAlignment="Center" FontSize="20" Margin="0,0,100,0">Доход</TextBlock>
            <TextBlock TextAlignment="Center" FontSize="20">Налог</TextBlock>
        </StackPanel>
    </Grid>
</Window>
